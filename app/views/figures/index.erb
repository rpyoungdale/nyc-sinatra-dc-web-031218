<h1>Figures</h1>
<% @figures.each do |figure|%>

  <h2><%= figure.name%></h2>

  <h3>Titles</h3>
  <% figure.titles.each do |title| %>
    <ul>
      <li><%= title.name %></li>
    </ul>
  <% end %>

  <h3>Landmarks</h3>
  <% figure.landmarks.each do |landmark| %>
    <ul>
      <li><%= landmark.name %></li>
    </ul>
  <% end %>
<a href="/figures/<%= figure.id %>/edit"><button>Edit Figure</button></a>
<% end%>